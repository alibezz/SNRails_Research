<h1><% t(:new_item) %></h1>

<%= error_messages_for :item %>

<% form_for(:item, :url => {:action => 'create', :item_type => @item_type } ) do |f| %>
  <%= render :partial => "#{@item_type}_form", :locals => { :f => f } %>
  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>
