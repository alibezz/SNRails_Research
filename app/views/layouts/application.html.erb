<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <title> 
        <%= t(:rails_survey) %>
    </title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= design_all_header_tags %>
    <%= include_lightbox_header %>
    </head>

  <body >
    <div id="warp">
      <div id="frame">

        <div id="header">
          <span class="title">Safernet</span>
          <span>Sistema de Pesquisas</span>
        </div>
        
        <div id="loginb">
          <%= login_bar %>
        </div>
          <div id="all_surveys">
            <% if !current_user.nil? and current_user.is_administrator? %>
              <%= link_to t(:see_all_surveys), survey_surveys_url %>
            <% else %>
              <%= link_to t(:see_all_surveys), public_index_url %>
            <% end %>
          </div>

        <div id="content">

        <div class="info">
          <%= flash[:notice] %>
          <%= flash[:error] %>
        </div>

        <%= 
#administration_menu 
%>

          <%= design_display(yield) %>
        </div>

        <div id="footer">
          <%= 
#footer 
%>
        </div><!-- end "footer" -->
      </div><!-- end "frame" -->
    </div> <!-- end "warp" -->
    <%= #localist_menu 
    %>
  </body>
</html>
